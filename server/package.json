{
    "name": "np-platform-server",
    "type": "module",
    "description": "Back end for the New Public Platform",
    "version": "0.15.0",
    "license": "Apache-2.0",
    "scripts": {
        "build": "tsc",
        "watch": "tsc --watch",
        "lint": "eslint .",
        "test": "jest",
        "coverage": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/wearenewpublic/np-platform"
    },
    "engines": {
        "node": "20"
    },
    "jest": {
        "testEnvironment": "node",
        "transform": {
            "^.+\\.(t|j)sx?$": [
                "babel-jest",
                {
                    "presets": [
                        "@babel/preset-env",
                        "@babel/preset-typescript"
                    ]
                }
            ]
        },
        "extensionsToTreatAsEsm": [
            ".ts",
            ".tsx"
        ],
        "setupFilesAfterEnv": [
            "./util/setuptests.js"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "modulePathIgnorePatterns": [
            "<rootDir>/lib"
        ]
    },
    "exports": {
        "./component/*": "./lib/component/*.js",
        "./component": "./lib/component/index.js",
        "./constructor/*": "./lib/constructor/*.js",
        "./constructor": "./lib/constructor/index.js",
        "./derived-views/*": "./lib/derived-views/*.js",
        "./derived-views": "./lib/derived-views/index.js",
        "./util/*": "./lib/util/*.js"
    },
    "dependencies": {
        "busboy": "^1.6.0",
        "cors": "^2.8.5",
        "form-data": "^4.0.0",
        "fs": "^0.0.1-security",
        "json5": "^2.2.3",
        "mustache": "^4.2.0",
        "node-fetch": "^3.3.1",
        "path": "^0.12.7",
        "postmark": "^4.0.4",
        "unfluff": "^3.2.0"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.25.8",
        "@babel/preset-typescript": "^7.25.7",
        "@types/expect": "^24.3.0",
        "@types/jest": "^29.5.13",
        "@types/node": "^22.7.6",
        "@types/pretty-format": "^24.3.0",
        "babel-jest": "^29.7.0",
        "eslint": "^8.15.0",
        "eslint-config-google": "^0.14.0",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "typescript": "^5.6.3",
        "undici-types": "^6.20.0"
    }
}
