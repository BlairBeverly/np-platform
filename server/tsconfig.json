{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "outDir": "lib",
        "declaration": true,
        "sourceMap": true,
        "incremental": true,
        "allowJs": true,
        "checkJs": false,
        "rootDir": ".",
        "noImplicitAny": false,
        "types": [
            "node",
            "jest"
        ]
    },
    "include": [
        "**/*"
    ],
    "exclude": [
        "lib",
        "node_modules",
        "coverage"
    ]
}