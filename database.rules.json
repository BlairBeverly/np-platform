{
    "rules": {
        "structure": {
            "$structure": {
                "instance": {                    
                    "$instance": {
                        ".read": true,
                        ".write": false,
                        "collection": {
                            "persona": {
                                "$user": {
                                    ".write" : "$user == auth.uid"
                                }
                            },
                            "$type": {
                                "$key": {
                                    ".write": true,
                                    ".validate": "newData.child('from').val() == auth.uid && (!data.exists() || data.child('from').val() == auth.uid)"
                                }
                            }
                        }
                    }
                },
                "userInstance": {
                  	"$user": {
                      ".read": "$user == auth.uid",
                      ".write": "$user == auth.uid"
                    }
                }
            }
        },
        "userInstance": {
      		"$user": {
                ".read": "$user == auth.uid",
                ".write": "$user == auth.uid"
            }
        },
        ".read": false,
        ".write": false  
    }
}
